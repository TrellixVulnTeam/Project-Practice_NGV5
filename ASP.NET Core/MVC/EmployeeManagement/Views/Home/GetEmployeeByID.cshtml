@{
    ViewBag.Title = "Employee Details";
    var employee = ViewData["Employee"] as EmployeeManagement.Models.Employee;
    var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @employee.Id</h4>
                <h4>Email : @employee.Email</h4>
                <h4>Department : @employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="Delete"
                   asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>