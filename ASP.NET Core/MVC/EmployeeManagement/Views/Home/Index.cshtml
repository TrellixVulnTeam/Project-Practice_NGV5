<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.jpg");
        <div class="card m-3">
            <div class="card-body text-center">
                <img class="card-img-top imageThumbnail" src="@photoPath"
                     asp-append-version="true" />

                <h4>Employee ID : @Html.DisplayFor(modelItem => item.Id)</h4>
                <h4>Email : @Html.DisplayFor(modelItem => item.Email)</h4>
                <h4>Department : @Html.DisplayFor(modelItem => item.Department)</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="GetEmployeeByID"
                   asp-route-id="@item.Id" class="btn btn-primary">View</a>

                <a href="#" class="btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@item.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="Delete"
                   asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
